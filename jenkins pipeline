pipeline {
  agent any

  parameters {
    string(name: 'BRANCH_NAME', defaultValue: 'dev', description: 'Git branch to deploy')
  }

  environment {
    SQL_FILES = ''
  }

  stages {

    stage('Checkout Code') {
      steps {
        script {
          def branchName = params.BRANCH_NAME
          echo "============================"
          echo "ğŸ”€ [Checkout Code] Branch Name Detected: ${branchName}"
          echo "============================"

          checkout([
            $class: 'GitSCM',
            branches: [[name: "*/${branchName}"]],
            userRemoteConfigs: [[
              url: 'https://bitbucket.org/bridgera1/spectranet-db.git',
              credentialsId: 'Bitbucket'
            ]]
          ])

          echo "âœ… Checked out branch: ${branchName}"
          env.RESOLVED_BRANCH = branchName
        }
      }
    }

    stage('Download Deploy Script From Main') {
      steps {
        script {
          echo "â¬‡ï¸ [Download Deploy Script] Always pulling multi_deploy.sh from main branch"

          dir('scripts') {
            checkout([
              $class: 'GitSCM',
              branches: [[name: '*/main']],
              extensions: [[$class: 'SparseCheckoutPaths',
                sparseCheckoutPaths: [[path: 'scripts/multi_deploy.sh']]
              ]],
              userRemoteConfigs: [[
                url: 'https://bitbucket.org/bridgera1/spectranet-db.git',
                credentialsId: 'Bitbucket'
              ]]
            ])
          }

          echo "âœ… Downloaded scripts/multi_deploy.sh from main branch."
        }
      }
    }

    stage('Set DB Config Per Branch') {
      steps {
        script {
          def branch = env.RESOLVED_BRANCH
          echo "âš™ï¸ [Set DB Config] Setting DB credentials for branch: ${branch}"

          if (branch == 'dev') {
            env.DB_CREDS_ID = 'DB_CREDS_DEV'
            env.DB_HOST = '18.210.9.112'
            env.DB_NAME = 'sn_qa_new'
          } else if (branch == 'qa') {
            env.DB_CREDS_ID = 'DB_CREDS_QA'
            env.DB_HOST = 'spectranetdevqauat-cluster.cluster-cscm5zsm73fc.us-east-1.rds.amazonaws.com'
            env.DB_NAME = 'Spectranet_QA'
          } else if (branch == 'uat') {
            env.DB_CREDS_ID = 'DB_CREDS_UAT'
            env.DB_HOST = 'your-uat-db-host'
            env.DB_NAME = 'your_uat_db'
          } else if (branch == 'prod') {
            env.DB_CREDS_ID = 'DB_CREDS_PROD'
            env.DB_HOST = 'your-prod-db-host'
            env.DB_NAME = 'your_prod_db'
          } else {
            error "âŒ Unknown branch: ${branch} â€” no DB config!"
          }

          echo "âœ… DB Config:"
          echo "   ğŸ”‘ Credentials ID : ${env.DB_CREDS_ID}"
          echo "   ğŸŒ DB Host        : ${env.DB_HOST}"
          echo "   ğŸ—„ï¸  DB Name        : ${env.DB_NAME}"
        }
      }
    }

    stage('Detect & Deploy SQL Files') {
      steps {
        script {
          echo "ğŸ” [Detect & Deploy] Checking for modified .sql files"

          def changedSQL = sh(
            script: '''git diff --name-only HEAD~1 HEAD | grep '.sql$' || true''',
            returnStdout: true
          ).trim()

          echo "ğŸ§ª Debug: Raw changedSQL = '${changedSQL}'"

          if (changedSQL) {
            env.SQL_FILES = changedSQL
            def sqlList = changedSQL.split()
            sqlList.each { file -> echo "   ğŸ“„ ${file}" }

            withCredentials([usernamePassword(
              credentialsId: env.DB_CREDS_ID,
              usernameVariable: 'DB_USER',
              passwordVariable: 'DB_PASS'
            )]) {
              def fileArgs = sqlList.collect { "\"${it}\"" }.join(' ')
              echo "ğŸš€ [Deploy] Running multi_deploy.sh with:"
              echo "   ğŸŒ DB Host : ${env.DB_HOST}"
              echo "   ğŸ—„ï¸  DB Name : ${env.DB_NAME}"
              echo "   ğŸ‘¤ DB User : ${DB_USER}"
              echo "   ğŸ“„ Files   : ${fileArgs}"

              sh """
                chmod +x scripts/multi_deploy.sh
                DB_HOST="${env.DB_HOST}" DB_NAME="${env.DB_NAME}" DB_USER="${DB_USER}" DB_PASS="${DB_PASS}" scripts/multi_deploy.sh ${fileArgs}
              """
            }
          } else {
            echo "ğŸš« No SQL files to deploy â€” skipping deployment."
          }
        }
      }
    }

  }

  post {
    success { echo "âœ… [Post] Pipeline completed successfully!" }
    failure { echo "âŒ [Post] Pipeline failed!" }
    always  { echo "ğŸ [Post] Pipeline finished. Branch: ${env.RESOLVED_BRANCH}" }
  }
}
